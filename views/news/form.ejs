<%- include('../layout/header.ejs'); %>
<!--Main layout-->
<main class="my-5">
    <div class="container">
        <!--Section: Content-->
        <section class="text-center" style="margin-top:70px;">
            <h4  class="mb-5"><strong>Create New</strong></h4>
        </section>
        <div>
            <form action ="<%=process.env.SITE_URL%>/news" method="post">
                <div class="form-row">

                    <%if(typeof err != 'undefined'){
                    if(err.length > 0){
                    err.forEach((el)=>{%>
                    <div class="alert alert-danger col-md-6" role="alert">
                        <%=el%>
                    </div>
                    <%})}
                    }%>

                    <div class="form-group col-md-6">
                        <label for="title">Title</label>
                        <input type="text" name="title" class="form-control" id="title" placeholder="Title"  <%if(typeof title != 'undefined'){%>value="<%=title%>"<%}%>>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="short_description">Short  Description</label>
                        <input type="text" name="short_description" class="form-control" id="short_description" placeholder="Short Description"  <%if(typeof short_description != 'undefined'){%>value="<%=short_description%>"<%}%>>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="description">Description</label>
                        <textarea name="description" class="form-control" id="description" rows="9" placeholder="Description"><%if(typeof description != 'undefined' && description != ''){%><%=description%><%}%></textarea>
                    </div>
                </div>
                <button style="margin-top:20px;" type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</main>
<%- include('../layout/footer.ejs'); %>